.chat-side
  .chat-user
    %h5 NaokiKumagai
    .chat-user__actions
      %a.chat-user__action
      =link_to new_group_path, class: "chat-user__action" do
        %i.fa.fa-pencil-square-o
      =link_to edit_user_registration_path, class: "chat-user__action" do
        %i.fa.fa-cog
  .chat-groups
    %li.chat-group
      - groups.each do |group|
        =link_to group_messages_path(group), class: "chat-group__link" do
          %p.chat-group__name #{group.name}
          %p.chat-group__message hoge
