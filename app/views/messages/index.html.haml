.layout-notification
  .chat
    = render partial: "./commons/chat-side", locals: {groups: @groups}
    .chat-main
      %div.chat-header
        %div.chat-header--left
          %h2= @group.name
          %p.chat-header__users
            Members:
            %span.chat-header__user NaokiKumagai
        %div.chat-header--right
          =link_to "Edit", edit_group_path(@group), class: "chat-header__edit-btn"
      %div.chat-body
        %ul.chat-messages
          = render partial: "./commons/message", :collection => @messages, :as => "message"
      %div.chat-footer
        =form_for [@group, @message] do |f|
          .chat-footer__body
            =f.text_area :body, placeholder: 'メッセージを入力してください'
            =f.label :image, class: 'chat-footer__file' do
              %i.fa.fa-image
          =f.submit 'Send'
